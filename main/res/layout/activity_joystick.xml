<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoystickActivity">

    <ImageView
        android:id="@+id/imageAxis"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="@string/STRING_TODO"
        android:src="@drawable/axis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <TextView
        android:id="@+id/txtXaxis"
        android:layout_width="54dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="@string/STRING_DOT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtYaxis"
        android:layout_width="55dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:text="@string/STRING_DOT"
        app:layout_constraintStart_toEndOf="@+id/txtXaxis"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAngle"
        android:layout_width="55dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:text="@string/STRING_DOT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/txtYaxis"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageEmile"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="260dp"
        android:contentDescription="@string/STRING_TODO"
        android:src="@drawable/emile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>